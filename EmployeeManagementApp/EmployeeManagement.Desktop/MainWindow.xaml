<Window x:Class="EmployeeManagement.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagement.Desktop"
        mc:Ignorable="d"
        Title="Employee Management" Height="500" Width="800">
    <Grid Margin="10">
        <TabControl FontFamily="Segoe UI" FontSize="14">


            <!-- Employee Form Tab -->
            <TabItem Header="Employees">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>


                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,5">
                        <Label Content="Name:" Width="120" VerticalAlignment="Center" />
                        <TextBox x:Name="txtName" Width="250" Height="25"/>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5">
                        <Label Content="Basic Salary:" Width="120" VerticalAlignment="Center" />
                        <TextBox x:Name="txtBasicSalary" Width="250" Height="25" />
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5">
                        <Label Content="Allowances:" Width="120" VerticalAlignment="Center" />
                        <TextBox x:Name="txtAllowances" Width="250" Height="25" />
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,5">
                        <Label Content="PF %:" Width="120" VerticalAlignment="Center" />
                        <TextBox x:Name="txtPFPercent" Width="250" Height="25" />
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,15" HorizontalAlignment="Left" >
                        <Button Content="Add" Width="100" Height="30" Click="AddEmployee_Click"  />
                        <!--<Button Content="Update" Width="100" Height="30" Click="UpdateEmployee_Click" />
                      <Button Content="Delete" Width="100" Height="30" Click="DeleteEmployee_Click"  />-->
                    </StackPanel>


                    <!--<ListBox x:Name="lstEmployees" Grid.Row="5" Height="200" Margin="0,20,0,0" />-->
                </Grid>
            </TabItem>


            <!-- Payroll Form Tab -->
            <TabItem Header="Payroll" Height="23" VerticalAlignment="Top">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>


                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,5">
                        <Label Content="Select Employee:" Width="120" VerticalAlignment="Center" />
                        <ComboBox x:Name="cmbEmployees" Width="250" Height="25"   />
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5">
                        <Label Content="Leave Days:" Width="120" VerticalAlignment="Center" />
                        <TextBox x:Name="txtLeaveDays" Width="250" Height="25" />
                    </StackPanel>


                    <Button Content="Calculate Payroll" Grid.Row="2" Width="150" Height="35" Margin="0,15,0,0" Click="CalculatePayroll_Click"  />


                    <Border Grid.Row="3" Background="White" CornerRadius="5" Padding="10" Margin="0,20,0,0" BorderBrush="#ddd" BorderThickness="1">
                        <StackPanel>
                            <TextBlock x:Name="txtGross" Text="Gross: " FontSize="14" Margin="5" />
                            <TextBlock x:Name="txtPF" Text="PF: " FontSize="14" Margin="5" />
                            <TextBlock x:Name="txtLeaveDeduction" Text="Leave Deduction: " FontSize="14" Margin="5" />
                            <TextBlock x:Name="txtNet" Text="Net: " FontSize="16" FontWeight="Bold" Margin="5" />
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>


        </TabControl>
    </Grid>
</Window>
